@model ContactUsViewModel
@using WebApp_gastec.Domain

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>

            <form asp-controller="Partial" asp-action="ContactUs" method="post" class="signin-form profile">
                @if (Gastech_Vault.TranslationLanguageID == 0)
                {

                    <h3 class="creainfo_sign">للتواصل معنا</h3>
                    <div class="login-form">
                        <div id="thankyou"></div>
                        <input asp-for="@Model.Name" id="nameusr" placeholder="الاسم" required="">
                        <input asp-for="@Model.Email" id="Email" placeholder="البريد الاليكترونى" required="">
                        <input asp-for="@Model.PhoneNumber" id="UserPhone" placeholder="رقم الهاتف" required="">
                        <textarea asp-for="@Model.Message" id="Msgdata" placeholder="اترك رسالتك" required=""></textarea>
                        <script src='https://www.google.com/recaptcha/api.js'></script>

                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="g-recaptcha" data-sitekey="@SiteSettings.GoogleRecaptchaSiteKey"></div>
                        </div>
                        <input asp-controller="Partial" asp-action="ContactUs" type="submit" id="sendrequest" value="ارسل">
                    </div>
                }
                else
                {
                    <h3 class="creainfo_sign">Contact Us</h3>
                    <div class="login-form">
                        <div id="thankyou"></div>
                        <input asp-for="@Model.Name" id="nameusr" placeholder="Name" required="">
                        <input asp-for="@Model.Email" id="Email" placeholder="Email" required="">
                        <input asp-for="@Model.PhoneNumber" id="UserPhone" placeholder="Phone Number" required="">
                        <textarea asp-for="@Model.Message" id="Msgdata" placeholder="Leave Your Message" required=""></textarea>
                        <script src='https://www.google.com/recaptcha/api.js'></script>

                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="g-recaptcha" data-sitekey="@SiteSettings.GoogleRecaptchaSiteKey"></div>
                        </div>
                        <input asp-controller="Partial" asp-action="ContactUs" type="submit" id="sendrequest" value="Send">
                    </div>
                }
            </form>
        </div>
    </div>
</div>
