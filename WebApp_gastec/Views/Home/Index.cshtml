@model HomePageViewModel
@using WebApp_gastec.Domain

@{

    ViewData["Title"] = "GASTEC";
    Layout = "_Layout";
}
<body>
    <!--Body-->
    <!--Main Slider-->
    <div id="mainslider">
        <section class="main-slider">
            <div class="rev_slider_wrapper " id="rev_slider_three_wrapper" data-source="gallery">
                <div class="rev_slider fullwidthabanner" id="rev_slider_three" data-version="5.4.1">
                    <ul>
                        @foreach (var entity in Model.BannersHome)
                        {
                            foreach (var image in entity.LstImages)
                            {

                                <li data-description="Slide Description" data-easein="default" data-easeout="default" data-fsmasterspeed="1500" data-fsslotamount="7" data-fstransition="parallaxhorizontal" data-hideafterloop="0" data-hideslideonmobile="off" data-masterspeed="default" data-param1="" data-param10="" data-param2="" data-param3="" data-param4="" data-param5="" data-param6="" data-param7="" data-param8="" data-param9="" data-rotate="0" data-saveperformance="off" data-slotamount="default" data-thumb="" data-title="Slide Title" data-transition="parallaxhorizontal">
                                    <img alt="" class="rev-slidebg" data-bgfit="cover" data-bgparallax="10" data-bgposition="center center" data-bgrepeat="no-repeat" data-no-retina="" src="~/Images/Banners/@image.ImageGUID" />
                                    <div class="tp-caption"
                                         data-paddingbottom="[0,0,0,0]"
                                         data-paddingleft="[0,0,0,0]"
                                         data-paddingright="[0,0,0,0]"
                                         data-paddingtop="[0,0,0,0]"
                                         data-responsive_offset="on"
                                         data-type="text"
                                         data-height="none"
                                         data-width="['700','700','700','400']"
                                         data-whitespace="normal"
                                         data-hoffset="['15','15','15','15']"
                                         data-voffset="['150','120','80','60']"
                                         data-x="['center','center','center','center']"
                                         data-y="['middle','middle','middle','middle']"
                                         data-textalign="['center','center','center','center']"
                                         data-frames='[{"from":"y:[-100%];z:0;rX:0deg;rY:0;rZ:0;sX:1;sY:1;skX:0;skY:0;","mask":"x:0px;y:0px;s:inherit;e:inherit;","speed":1500,"to":"o:1;","delay":1000,"ease":"Power3.easeInOut"},{"delay":"wait","speed":1000,"to":"auto:auto;","mask":"x:0;y:0;s:inherit;e:inherit;","ease":"Power3.easeInOut"}]'>
                                        <h2>@image.ImageName </h2>
                                    </div>
                                    <div class="tp-caption"
                                         data-paddingbottom="[0,0,0,0]"
                                         data-paddingleft="[0,0,0,0]"
                                         data-paddingright="[0,0,0,0]"
                                         data-paddingtop="[0,0,0,0]"
                                         data-responsive_offset="on"
                                         data-type="text"
                                         data-height="none"
                                         data-width="['700','700','700','400']"
                                         data-whitespace="normal"
                                         data-hoffset="['15','15','15','15']"
                                         data-voffset="['250','200','140','145']"
                                         data-x="['center','center','center','center']"
                                         data-y="['middle','middle','middle','middle']"
                                         data-textalign="['center','center','center','center']"
                                         data-frames='[{"from":"y:[100%];z:0;rX:0deg;rY:0;rZ:0;sX:1;sY:1;skX:0;skY:0;","mask":"x:0px;y:0px;s:inherit;e:inherit;","speed":1500,"to":"o:1;","delay":1000,"ease":"Power3.easeInOut"},{"delay":"wait","speed":1000,"to":"auto:auto;","mask":"x:0;y:0;s:inherit;e:inherit;","ease":"Power3.easeInOut"}]'>
                                        <div class="text">@image.Image_AltText</div>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </section>
    </div>
    <!--End Main Slider-->
    <!--About Section-->
    <section class="aproach-section bg-wave">
        <div class="auto-container">
            <div class="sec-title">
                <h2>
                    أحدث الأخبار
                    <a href="@Url.Action("AllNews","Home")" class="theme-btn read-more"
                       style="float: left;direction: rtl;font-size: 18px;">
                        عرض جميع الأخبار<span class="icon flaticon-left-arrow"
                                              style="margin-right: 10px;font-size: 20px;vertical-align: sub;"></span>
                    </a>
                </h2>
            </div>
            <div id="events1" class="row clearfix">
                <div class="three-item-carousel owl-carousel owl-theme">
                    @foreach (var topic in Model.NewsTopics.LstNews)
                    {
                        @if (topic.GroupID == 1 || topic.GroupID == 2)
                        {
                            <div class="services-block-two wow slideInUp" data-wow-delay=".30s">
                                <div class="inner-box">
                                    <div class="image">
                                        <img src="~/Images/NewsTopics/@topic.ImageGUID" alt="" />
                                        <div class="content-overlay">
                                            <div class="overlay-inner">
                                                <div class="content-box">
                                                    <div class="blockdate">
                                                        @topic.TopicDate &nbsp;<span class="icon flaticon-calendar"></span>
                                                    </div>

                                                    <h4>
                                                        <a href="@Url.Action("NewsDetails", "Home", new { serial_ = topic.Serial})">@topic.NewsTitle</a>
                                                    </h4>

                                                    <a href="@Url.Action("NewsDetails", "Home", new { serial_ = topic.Serial})" class="detail">
                                                        اقرأ
                                                        المزيد
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </section>
    <!--End About Section-->
    <!--Counter Section-->
    <section class="counter-section" style="background-image:url(../../wwwroot/public/assets/softextwo/images/background/action1.jpg);background-size: cover;">
        <div class="auto-container">
            <div class="row clearfix">
                <!--Image Column-->
                <div class="image-column col-lg-2 col-md-12 col-sm-12 pull-right wow slideInUp">
                    <div class="image">
                        <h1>أرقام غازتك</h1>
                    </div>
                    <h1 class="cng">CNG for Mobility</h1>
                </div>
                <!--Counter Column-->
                <div class="counter-main-column col-lg-10 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <div class="fact-counter">
                            <div class="row clearfix">
                                @foreach (var listWebSection in Model.GastechNumbers)
                                {
                                    @foreach (var webSection in listWebSection.LstWebSections)
                                    {
                                        <div class="column counter-column col-lg-3 col-md-3 col-sm-6 col-xs-6 pull-right wow fadeIn" data-wow-delay=".70s" style="visibility: visible; animation-delay: 0.7s; animation-name: fadeIn;">
                                            <!--Column-->
                                            <div class="card-top"><img src="~/public/assets/softextwo/images/card-top.png" alt="" /></div>
                                            <div class="inner">
                                                <div class="count-outer count-box">
                                                    <span class="count-text" data-speed="2500" data-stop="@webSection.WebSectionTitle">0</span>@webSection.ToolTip
                                                </div>
                                                @foreach (var img in webSection.LstImages)
                                                {
                                                    <img src="~/Images/GastechNumbers/@img.ImageGUID" alt="" />
                                                }
                                                <h4 class="counter-title">@webSection.WebSection_PlainText</h4>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--End Counter Section-->
    <!--Service Section-->
    <section class="services-section" style="background:#ffd41f">
        <div class="auto-container">
            <div class="col-md-3 col-sm-12 col-xs-12 news-block pull-left text-left wow slideInLeft" style="padding-top:50px; padding-bottom: 30px; direction: rtl;">
                <img src="~/public/assets/softextwo/images/eni-logo.png" alt="" />
            </div>
            <div class="col-md-9 col-sm-12 col-xs-12 pull-right">
                <div dir="rtl">
                    <h1 style="padding-bottom: 10px"> إينى – غازتك </h1>
                    <h2 style="padding-bottom: 30px"> شراكة استراتيجية لتطوير خدمات التموين وتوزيع الزيوت</h2>
                </div>
                <div class="row clearfix">
                    <!--Column-->
                    <div class="column col-md-12 col-sm-12">
                        <div class="row clearfix">
                            <!--News Block-->
                            <div id="events2"></div>
                            <div class="single-item-carousel owl-carousel owl-theme">
                                <!-- Retrive Data while Consuming -->
                                <!--//End backend to retrieve variables  -->
                                @foreach (var img in Model.EniGastech.LstNews)
                                {
                                    <div class="testimonial-block">
                                        <div class="inner-box">
                                            <div class="upper-box">
                                                <div class="image">
                                                    <img src="~/Images/EniGastec/@img.ImageGUID" alt="" />
                                                </div>
                                            </div>
                                            <div class="text">
                                                <a href="@Url.Action("NewsDetails", "Home", new { serial_ = img.Serial})">@img.NewsTitle</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div dir="rtl">
                                <a href="@Url.Action("AllNews","Home")" class="theme-btn read-more">
                                    المزيد من الأخبار<span class="icon flaticon-left-arrow" style="margin-right: 10px;font-size: 20px;vertical-align: sub;"></span>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="container-fluid">
            <div id="gallerybanner"></div>
            <!--//Start backend to retrieve variables  -->

            @foreach (var listImages in Model.MidBanner)
            {
                @foreach (var image in listImages.LstImages)
                {
                    <img src="~/Images/MidBanner/@image.ImageGUID" class="eni-img img-opa" alt="" />
                }
            }
            <!--//end backend to retrieve variables  -->
        </div>
        <div class="auto-container">
            <div id="gallery3"></div>
            <div class="four-item-carousel owl-carousel owl-theme">
                <!--//end backend to retrieve variables  -->
                <!--Services Block-->
                @foreach (var listimage in Model.MidSection)
                {
                    @foreach (var image in listimage.LstImages)
                    {
                        <div class="services-block-three">
                            <div class="inner-box">
                                <div class="image">
                                    <a href="@Url.Action("Index" , "Oil" , new { ID_ = GetActionName.GetActionNameforEniImagesByID(image.ImageID) })">
                                        <img src="~/Images/MidSection/@image.ImageGUID" alt="" />
                                    </a>
                                </div>
                                <div class="lower-content">
                                    <h3>
                                        <a href="@Url.Action("Index" , "Oil" , new { ID_ = GetActionName.GetActionNameforEniImagesByID(image.ImageID) })">@image.ImageName</a>
                                    </h3>
                                    <div class="text">
                                        <a href="@Url.Action("Index" , "Oil" , new { ID_ = GetActionName.GetActionNameforEniImagesByID(image.ImageID) })" class="theme-btn read-more" dir="rtl">
                                            إقرأ المزيد<span class="icon flaticon-left-arrow" style="margin-right: 10px;font-size: 20px;vertical-align: sub;"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="text-left" style="margin-top: 30px" dir="rtl">
                <a href="https://oilproducts.eni.com/en_GB/products" target="_blank" class="theme-btn read-more" style="font-size: 18px;">
                    موقع إيني العالمية<span class="icon flaticon-left-arrow" style="margin-right: 10px;font-size: 20px;vertical-align: sub;"></span>
                </a>
            </div>
        </div>
    </section>
    <!--End Service Section-->
    <!--News Section-->
    <section class="project-section">
        <div class="auto-container">
            <div class="sec-title">
                <h2>
                    فعاليات غازتك
                    <a href="@Url.Action("AllNews","Home")" class="theme-btn read-more" style="float: left;direction: rtl;font-size: 18px;color: #fff;">
                        عرض جميع الفعاليات<span class="icon flaticon-left-arrow" style="margin-right: 10px;font-size: 20px;vertical-align: sub;"></span>
                    </a>
                </h2>
            </div>
            <div class="row clearfix">
                <!--Column-->
                <div class="column col-md-12 col-sm-12 col-xs-12">
                    <div class="row clearfix">
                        <div id="events3">
                            @foreach (var image in Model.NewsSection.LstNews.Take(3))
                            {
                                <!--News Block-->
                                <div class="news-block col-md-4 col-sm-6 col-xs-12 wow fadeIn pull-right" style="visibility: visible; animation-name: fadeIn;">
                                    <div class="inner-box">
                                        <div class="image">
                                            <a href="@Url.Action("NewsDetails", "Home", new { serial_ = image.Serial})"><img src="~/Images/NewsSection/@image.ImageGUID" alt="" /></a>
                                        </div>
                                        @* Adding News Date *@
                                        <div class="lower-box">
                                            <div class="post-info">@image.TopicDate.ToShortDateString()</div>
                                            <h3>
                                                <a href="@Url.Action("NewsDetails", "Home", new { serial_ = image.Serial})">@image.NewsTitle</a>
                                            </h3>
                                            <a href="@Url.Action("NewsDetails", "Home", new { serial_ = image.Serial})" class="theme-btn read-more">
                                                إقرأ المزيد
                                                <span class="icon flaticon-left-arrow" style="margin-right: 10px;font-size: 20px;vertical-align: sub;"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <!--//End backend to retrieve variables  -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--End News Section-->
    <!--================Map Area =================-->
    @*check the Map Section in Source code*@

    <div class="row" style="background-color: #bdd2e2; margin: 0;">
        <div class="col-md-3 col-xs-12 pull-right text-right">
            <h1>خدمات غازتك</h1>
            <select id="getGovernorat" style="width: 100%; padding:10px;direction:rtl">
                <option value="0">كل المحافظات</option>
                @foreach (var city in Model.Cities)
                {
                    <option value="@city.ID">
                        @city.Name
                    </option>
                }
            </select>
        </div>
    </div>
    <div id="locationmap">
    </div>
    <script>
        $(document).ready(function () {
            navigator.geolocation.getCurrentPosition(showPosition, error);
            $("#getGovernorat").change(function () {


            $("#locationmap").html("please wait...");
            $.ajax({
                type: 'POST',
                url: "@Url.Action("_ShowMapPartial","Home")",
                data: { longtitude: 7.629603, latitude: 23.377556 },
            }).success(function (response) {

                $("#locationmap").html(response);
            });

            });
        });

        function showPosition(position) {

            getlat = position.coords.latitude;
            getlong = position.coords.longitude;
            $("#locationmap").html("please wait...");
            $.ajax({
                type: 'POST',
                url: "@Url.Action("_ShowMapPartial","Home")",
                data: { longtitude: 7.629603, latitude: 23.377556 },
            }).success(function (response) {

                $("#locationmap").html(response);
            });

        }
        function error(err) {
            $("#locationmap").html("please wait...");
            $.ajax({
                type: 'POST',
                url: "@Url.Action("_ShowMapPartial","Home")",
                data: { longtitude: 7.629603, latitude: 23.377556 },
            }).success(function (response) {

                $("#locationmap").html(response);
            });
        }
    </script>

    <!--End Call Back Section-->
    <!-- PAGE - END -->
